<section class="category-form">
 <div class="header">
    NEW CATEGORY
  </div>
  <div class="form-container">
    <h1>Add New Category</h1>
    <%= form_with(model: @group, url: user_categories_path(user_id: current_user.id)) do |form| %>
      <div class="field">
        <%= form.label :name %><br>
        <%= form.text_field :name %>
      </div>
      <div class="field">
        <%= form.label :icon %><br>
        <%= form.text_field :icon %>
      </div>
        <%= form.submit 'Save' %>
    <% end %>
    <div class="new-category">
      <div class="link-btn">
         <%= link_to 'BACK', user_categories_path(user_id: current_user.id) %>
      </div>
    </div>
  </div>
</section>