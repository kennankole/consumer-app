
<section class="entities-section">
  <div class="header categories">
    <%= link_to '<', home_index_path, class: "home-link-btn" %>
    <div class="category-header">TRANSACTIONS</div>
  </div>
  <div class="user-name home-link">
    <div><%= link_to '<', user_categories_path(user_id: current_user.id), class: "home-link-btn" %> </div>
    <div>$<%= @totals %></div>
  </div>
  <div class="transaction-container">
    
    <% @entities.each do |ent| %>
    <div class="user-name transaction">
      <div><%= ent.name %></div>
      <div>$<%= ent.amout %></div>
    </div>
    <% end %>
  </div>
  <div class="new-category">
    <div class="link-btn">
      <%= link_to 'Add a New Transaction', new_user_entity_path(user_id: current_user.id) %>
    </div>
  </div>
</section>